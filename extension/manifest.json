{
  "manifest_version": 3,
  "name": "YouTube Partial Auto-Translate",
  "version": "0.1.0",
  "description": "Auto-translates a percentage of YouTube caption sentences for language exposure and adapts based on feedback.",
  "permissions": ["storage"],
  "host_permissions": ["https://translation.googleapis.com/*"],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "utils/constants.js",
        "utils/helpers.js",
        "utils/storage.js",
        "content/captionTranslator.js",
        "content/captionObserver.js",
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "ui/popup/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
